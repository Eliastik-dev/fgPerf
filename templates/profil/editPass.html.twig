{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}

<div class="container">
    <!-- <h1 class="text-center my-2">Votre profil</h1> -->

    {% for message in app.flashes('error') %}
    <div class="my-2 col-12 text-center">
        <div class="alert alert-danger" role="alert">
            {{message}}
        </div>
    </div>
    {% endfor %}

    <form method="post" class="my-4">

        <div class="form-group">
            <label for="pass">Nouveau mot de passe</label>
            <input type="password" class="form-control" name="pass" id="pass">
        </div>

        <div class="form-group">
            <label for="pass2">Confirmer nouveau mot de passe</label>
            <input type="password" class="form-control" name="pass2" id="pass2">
        </div>
        
        <button class="btn btn-dark">Valider</button>
        <a href="{{ path('profil') }}" class="btn btn-light">Annuler</a>


    </form>

</div>

{% endblock %}